@using Task_PurpleBuzz.Areas.Admin.ViewModels.TeamMembers;
@model TeamMemberCreateVM

<!-- Begin Page Content -->
<div class="container-fluid">

    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800">Create Team Members</h1>

    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-body">
            <form asp-action="create" asp-controller="teammembers" method="post">
                <div class="form-group">
                    <label asp-for="Name"></label>
                    <input class="form-control" asp-for="Name" />
                    <span asp-validation-for="Name"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Occupancy"></label>
                    <input class="form-control" asp-for="Occupancy" />
                    <span asp-validation-for="Occupancy"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ImgPath"></label>
                    <input class="form-control" asp-for="ImgPath" />
                    <span asp-validation-for="ImgPath"></span>
                </div>
                <button type="submit" class="btn btn-primary">Create</button>
            </form>
        </div>
    </div>

</div>
<!-- /.container-fluid -->