@using Task_PurpleBuzz.Areas.Admin.ViewModels.TeamMemberWFU;
@model TeamMemberWFUUpdateVM

<!-- Begin Page Content -->
<div class="container-fluid">

    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800">Update Team Members</h1>

    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-body">
            <form enctype="multipart/form-data" asp-action="update" asp-controller="teammemberwfu" method="post">
                <div class="form-group">
                    <label asp-for="Name"></label>
                    <input class="form-control" asp-for="Name" />
                    <span asp-validation-for="Name"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Surname"></label>
                    <input class="form-control" asp-for="Surname" />
                    <span asp-validation-for="Surname"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Duty"></label>
                    <textarea class="form-control" asp-for="Duty"></textarea>
                    <span asp-validation-for="Duty"></span>
                </div>
                <div class="form-group">
                    <label asp-for="About"></label>
                    <textarea class="form-control" asp-for="About"></textarea>
                    <span asp-validation-for="About"></span>
                </div>
                <div class="form-group">
                    <img class="w-25" src="~/assets/img/@Model.PhotoName">
                    <div class="mb-3">
                    <label class="form-label" asp-for="Photo"></label></br>
                    <input type="file" class="form-label" asp-for="Photo">
                    </div>
                    <span asp-validation-for="Photo"></span>
                </div>
                <button type="submit" class="btn btn-primary">Update</button>
            </form>
        </div>
    </div>

</div>
<!-- /.container-fluid -->