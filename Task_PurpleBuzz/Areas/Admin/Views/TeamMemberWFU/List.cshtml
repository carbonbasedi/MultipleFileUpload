@using Task_PurpleBuzz.Areas.Admin.ViewModels.TeamMemberWFU
@model TeamMemberWFUListVM

<!-- Begin Page Content -->
<div class="container-fluid">
	<!-- Page Heading -->
	<h1 class="h3 mb-2 text-gray-800">Team Members</h1>
	<a class="btn btn-primary m-3" asp-action="create" asp-controller="teammemberwfu">Create</a>
	<!-- DataTales Example -->
	<div class="card shadow mb-4">
		<div class="card-body">
			<div class="table-responsive">
				<table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
					<thead>
						<tr>
							<th>Profile Picture</th>
							<th>Fullname</th>
							<th>Duty</th>
							<th>Created At</th>
							<th>Modified At</th>
							<th>Actions</th>
						</tr>
					</thead>
					<tbody>
						@foreach (var teamMemberWFU in Model.TeamMemberWFUs)
						{
							<tr>
								<td>
									<img class="w-25" src="~/assets/img/@teamMemberWFU.PhotoName">
								</td>
								<td>@teamMemberWFU.Name @teamMemberWFU.Surname</td>
								<td>@teamMemberWFU.Duty</td>
								<td>@teamMemberWFU.CreatedAt.ToString("dd.MM.yyyy HH:mm:ss")</td>
								<td>@teamMemberWFU.ModifiedAt?.ToString("dd.MM.yyyy HH:mm:ss")</td>
								<td>
									<a asp-action="update" asp-controller="teammemberwfu" asp-route-id="@teamMemberWFU.Id" class="btn btn-primary">Update</a>
									<a onclick="return DeleteConfirmation()" asp-action="delete" asp-controller="teammemberwfu" asp-route-id="@teamMemberWFU.Id" class="btn btn-danger">Delete</a>
									<a asp-action="details" asp-controller="teammemberwfu" asp-route-id="@teamMemberWFU.Id" class="btn btn-info">Details</a>
								</td>
							</tr>
						}
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>
<!-- /.container-fluid -->
