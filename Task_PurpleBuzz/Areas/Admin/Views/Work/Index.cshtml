@using Task_PurpleBuzz.Areas.Admin.ViewModels.Works
@model WorkIndexVM

<!-- Begin Page Content -->
<div class="container-fluid">
	<!-- Page Heading -->
	<h1 class="h3 mb-2 text-gray-800">Works</h1>
	<a class="btn btn-primary m-3" asp-action="create" asp-controller="work">Create</a>
	<!-- DataTales Example -->
	<div class="card shadow mb-4">
		<div class="card-body">
			<div class="table-responsive">
				<table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
					<thead>
						<tr>
							<th>Title</th>
							<th>Category</th>
							<th>Created At</th>
							<th>Modified At</th>
							<th>Actions</th>
						</tr>
					</thead>
					<tbody>
						@foreach (var work in Model.Works)
						{
							<tr>
								<td>@work.Title</td>
								<td>@work.WorkCategory.Name</td>
								<td>@work.CreatedAt.ToString("dd.MM.yyyy HH:mm:ss")</td>
								<td>@work.ModifiedAt?.ToString("dd.MM.yyyy HH:mm:ss")</td>
								<td>
									@if (!work.IsDeleted)
									{
										<a asp-action="update" asp-controller="work" asp-route-id="@work.Id" class="btn btn-primary">Update</a>
										<a onclick="return DeleteConfirmation()" asp-action="delete" asp-controller="work" asp-route-id="@work.Id" class="btn btn-danger">Delete</a>
									}
									<a asp-action="details" asp-controller="work" asp-route-id="@work.Id" class="btn btn-info">Details</a>
								</td>
							</tr>
						}
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>
<!-- /.container-fluid -->
